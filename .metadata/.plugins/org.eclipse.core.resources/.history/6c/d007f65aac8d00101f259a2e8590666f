# ==============================
# Nome da aplicação
# ==============================
spring.application.name=microstore-product-service

# ==============================
# Configuração do banco H2 em memória (para testes)
# ==============================
spring.datasource.url=jdbc:h2:mem:productdb
spring.datasource.driverClassName=org.h2.Driver
spring.datasource.username=sa
spring.datasource.password=

# ==============================
# Dialeto do Hibernate para H2
# ==============================
spring.jpa.database-platform=org.hibernate.dialect.H2Dialect

# Cria/atualiza tabelas automaticamente
spring.jpa.hibernate.ddl-auto=update

# ==============================
# Mostrar SQL no console
# ==============================
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true

# Mostra parâmetros do SQL no log (Hibernate 6)
logging.level.org.hibernate.SQL=DEBUG
logging.level.org.hibernate.orm.jdbc.bind=TRACE

# ==============================
# Logs detalhados de JDBC e Hikari
# ==============================
logging.level.org.springframework.jdbc.core.JdbcTemplate=DEBUG
logging.level.com.zaxxer.hikari=DEBUG

# ==============================
# Console web do H2
# ==============================
spring.h2.console.enabled=true
spring.h2.console.path=/h2-console

# ==============================
# DevTools (reinício automático)
# ==============================
spring.devtools.restart.enabled=true
spring.devtools.livereload.enabled=true

# ==============================
# Logs da aplicação
# ==============================
logging.level.com.microstore.products=DEBUG
